 @model SanPham

<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
    <div class="featured__item">
        <div class="featured__item__pic text-center position-relative" style="overflow: hidden;">

            @{
                var anh = Model.AnhSanPhams.FirstOrDefault();
            }
            <img src="@Url.Content("~" + (anh?.Url ?? "default.jpg"))"
                 alt="@Model.TenSp"
                 width="300"
                 height="400"
                 style="object-fit: cover; border-radius: 6px;" />


            <ul class="featured__item__pic__hover"
                style="position: absolute; bottom: 10px; left: 0; right: 0; display: flex; justify-content: center; gap: 10px;">
                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="featured__item__text text-center mt-2">
            <h6>
                <a asp-controller="Home" asp-action="ProductDetail" asp-route-maSP="@Model.MaSp">
                    @Model.TenSp
                </a>
            </h6>
            <h5>@Model.Gia  VND</h5>
        </div>
    </div>
</div>
