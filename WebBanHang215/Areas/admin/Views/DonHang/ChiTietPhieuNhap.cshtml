@model WebBanHang215.Areas.admin.ViewModels.ChiTietPhieuNhapViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm chi tiết phiếu nhập";
    Layout = "~/Areas/admin/Views/_LayoutCustomAdmin.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Thêm chi tiết phiếu nhập</h1>
    <p class="page-subtitle">Thêm sản phẩm vào phiếu nhập kho</p>
</div>

<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="mb-0">
            <i class="fas fa-plus me-2"></i>Thông tin chi tiết phiếu nhập
        </h5>
    </div>
    <div class="admin-card-body">
        <form asp-action="ChiTietPhieuNhap" asp-controller="DonHang" asp-area="admin" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MaPhieuNhap" class="form-label fw-semibold">Mã phiếu nhập *</label>
                        <input asp-for="MaPhieuNhap" class="form-control" readonly />
                        <span asp-validation-for="MaPhieuNhap" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoLuongNhap" class="form-label fw-semibold">Số lượng nhập *</label>
                        <input asp-for="SoLuongNhap" class="form-control" placeholder="Nhập số lượng" />
                        <span asp-validation-for="SoLuongNhap" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MaSp" class="form-label fw-semibold">Sản phẩm *</label>
                        <select asp-for="MaSp" asp-items="ViewBag.DanhSachSanPham" class="form-select">
                            <option value="">-- Chọn sản phẩm --</option>
                        </select>
                        <span asp-validation-for="MaSp" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DonGiaNhap" class="form-label fw-semibold">Đơn giá nhập *</label>
                        <div class="input-group">
                            <input asp-for="DonGiaNhap" class="form-control" placeholder="0" />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div class="text-end">
                <a asp-action="DanhSachChiTietPhieuNhap" asp-route-maPhieuNhap="@Model.MaPhieuNhap" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Lưu chi tiết
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
