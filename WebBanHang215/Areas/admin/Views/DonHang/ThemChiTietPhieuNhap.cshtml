@model WebBanHang215.Areas.admin.ViewModels.ChiTietPhieuNhapCreateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm chi tiết phiếu nhập";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center mb-4">Thêm chi tiết phiếu nhập</h2>

<form asp-action="ThemChiTietPhieuNhap" method="post" class="w-50 mx-auto">

    <div class="form-group mb-3">
        <label>Mã phiếu nhập</label>
        <input type="text" class="form-control" value="@Model.MaPhieuNhap" readonly />
        <input type="hidden" asp-for="MaPhieuNhap" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaSp"></label>
        <select asp-for="MaSp" asp-items="Model.SanPhamList" class="form-control"></select>
        <span asp-validation-for="MaSp" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="DonGiaNhap"></label>
        <input asp-for="DonGiaNhap" class="form-control" />
        <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">💾 Lưu chi tiết</button>
        <a asp-action="DanhSachChiTietPhieuNhap" asp-route-maPhieuNhap="@Model.MaPhieuNhap" class="btn btn-secondary">← Quay lại</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
