@model WebBanHang215.Areas.admin.ViewModels.DonHangEditViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Sửa đơn hàng";
    Layout = "~/Areas/admin/Views/_LayoutCustomAdmin.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Sửa đơn hàng #@Model.MaDh</h1>
    <p class="page-subtitle">Cập nhật thông tin đơn hàng</p>
</div>

<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="mb-0">
            <i class="fas fa-edit me-2"></i>Thông tin đơn hàng
        </h5>
    </div>
    <div class="admin-card-body">
        <form asp-action="SuaDonHang" method="post">
            <input type="hidden" asp-for="MaDh" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MaNd" class="form-label fw-semibold">Khách hàng *</label>
                        <select asp-for="MaNd" asp-items="Model.NguoiDungList" class="form-select">
                            <option value="">-- Chọn khách hàng --</option>
                        </select>
                        <span asp-validation-for="MaNd" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TongTien" class="form-label fw-semibold">Tổng tiền *</label>
                        <div class="input-group">
                            <input asp-for="TongTien" class="form-control" placeholder="0" />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <span asp-validation-for="TongTien" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TrangThai" class="form-label fw-semibold">Trạng thái đơn hàng *</label>
                        <select asp-for="TrangThai" class="form-select">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="Chờ xử lý">Chờ xử lý</option>
                            <option value="Đang xử lý">Đang xử lý</option>
                            <option value="Đang giao">Đang giao</option>
                            <option value="Đã giao">Đã giao</option>
                            <option value="Đã hủy">Đã hủy</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MaKm" class="form-label fw-semibold">Khuyến mãi</label>
                        <select asp-for="MaKm" asp-items="Model.KhuyenMaiList" class="form-select">
                            <option value="">-- Không áp dụng --</option>
                        </select>
                        <span asp-validation-for="MaKm" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NgayDatHang" class="form-label fw-semibold">Ngày đặt hàng</label>
                        <input asp-for="NgayDatHang" type="datetime-local" class="form-control" />
                        <span asp-validation-for="NgayDatHang" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div class="text-end">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
