@model WebBanHang215.Areas.admin.ViewModels.DonHangEditViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Sửa đơn hàng";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-primary text-center">Sửa đơn hàng</h2>

<form asp-action="SuaDonHang" method="post">
    <input type="hidden" asp-for="MaDh" />

    <div class="mb-3">
        <label asp-for="MaNd" class="form-label"></label>
        <select asp-for="MaNd" asp-items="Model.NguoiDungList" class="form-select">
            <option value="">-- Chọn người dùng --</option>
        </select>
        <span asp-validation-for="MaNd" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TongTien" class="form-label"></label>
        <input asp-for="TongTien" class="form-control" />
        <span asp-validation-for="TongTien" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TrangThai" class="form-label"></label>
        <select asp-for="TrangThai" class="form-select">
            <option value="">-- Chọn trạng thái --</option>
            <option value="Đang xử lý">Đang xử lý</option>
            <option value="Đã xử lý">Đã xử lý</option>
            <option value="Hoàn thành">Hoàn thành</option>
            <option value="Hủy">Hủy</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MaKm" class="form-label"></label>
        <select asp-for="MaKm" asp-items="Model.KhuyenMaiList" class="form-select">
            <option value="">-- Không áp dụng --</option>
        </select>
        <span asp-validation-for="MaKm" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NgayDatHang" class="form-label"></label>
        <input asp-for="NgayDatHang" type="datetime-local" class="form-control" />
        <span asp-validation-for="NgayDatHang" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
