@model WebBanHang215.Areas.admin.ViewModels.ChiTietPhieuNhapCreateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Sửa chi tiết phiếu nhập";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
}

<div class="text-center my-4">
    <h1 class="text-dark">Sửa chi tiết phiếu nhập</h1>
</div>

<form asp-action="SuaChiTietPhieuNhap" method="post">
    <input type="hidden" asp-for="MaChiTietNk" />

    <div class="form-group mb-3">
        <label asp-for="MaPhieuNhap" class="form-label"></label>
        <input asp-for="MaPhieuNhap" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label asp-for="NgayNhap" class="form-label"></label>
        <input asp-for="NgayNhap" class="form-control" readonly />
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaSp" class="form-label">Sản phẩm</label>
        <select asp-for="MaSp" asp-items="Model.SanPhamList" class="form-select"></select>
        <span asp-validation-for="MaSp" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SoLuong" class="form-label"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DonGiaNhap" class="form-label"></label>
        <input asp-for="DonGiaNhap" class="form-control" />
        <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="DanhSachChiTietPhieuNhap" asp-route-maPhieuNhap="@Model.MaPhieuNhap" class="btn btn-secondary">← Quay lại</a>
        <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
