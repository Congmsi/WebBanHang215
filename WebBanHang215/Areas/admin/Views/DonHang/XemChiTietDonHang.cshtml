@model WebBanHang215.Areas.admin.ViewModels.DonHangChiTietViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-primary mb-4">Chi tiết đơn hàng #@Model.MaDh</h2>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Người đặt hàng:</dt>
        <dd class="col-sm-9">@Model.TenDangNhap</dd>

        <dt class="col-sm-3">Ngày đặt hàng:</dt>
        <dd class="col-sm-9">@Model.NgayDatHang?.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Tổng tiền:</dt>
        <dd class="col-sm-9">@Model.TongTien?.ToString("N0") VNĐ</dd>

        <dt class="col-sm-3">Trạng thái đơn hàng:</dt>
        <dd class="col-sm-9">@Model.TrangThai</dd>

        <dt class="col-sm-3">Địa chỉ giao hàng:</dt>
        <dd class="col-sm-9">@Model.DiaChiGiaoHang</dd>

        <dt class="col-sm-3">Hình thức thanh toán:</dt>
        <dd class="col-sm-9">@Model.HinhThucThanhToan</dd>

        <dt class="col-sm-3">Trạng thái thanh toán:</dt>
        <dd class="col-sm-9">@Model.TrangThaiThanhToan</dd>

        <dt class="col-sm-3">Ngày giao dự kiến:</dt>
        <dd class="col-sm-9">@Model.NgayGiaoDuKien?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Ngày giao thực tế:</dt>
        <dd class="col-sm-9">@Model.NgayGiaoThucTe?.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<h4 class="text-success">Sản phẩm trong đơn hàng</h4>
<table class="table table-bordered">
    <thead class="table-success">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietSanPhams)
        {
            <tr>
                <td>@item.TenSanPham</td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia.ToString("N0") VNĐ</td>
                <td>@item.ThanhTien.ToString("N0") VNĐ</td>
                <td>
                    <a asp-action="SuaChiTietDonHang" asp-controller="DonHang"
                       asp-route-id="@item.MaChiTiet"
                       class="btn btn-warning btn-sm">Sửa</a>

                    <a asp-action="XoaChiTietDonHang" asp-controller="DonHang"
                       asp-route-id="@item.MaChiTiet"
                       class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="mt-4">
    <a asp-action="ThemChiTietDonHang" asp-route-maDh="@Model.MaDh" class="btn btn-success">➕ Thêm chi tiết sản phẩm</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">⬅ Quay lại danh sách đơn hàng</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
