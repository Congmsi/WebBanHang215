@model WebBanHang215.Areas.admin.ViewModels.ChiTietPhieuNhapItemViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Xem chi tiết phiếu nhập";
    Layout = "~/Areas/admin/Views/_LayoutCustomAdmin.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Chi tiết phiếu nhập</h1>
    <p class="page-subtitle">Thông tin chi tiết sản phẩm trong phiếu nhập #@Model.MaPhieuNhap</p>
</div>

<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>Thông tin chi tiết
        </h5>
    </div>
    <div class="admin-card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- Import Details -->
                <div class="info-group mb-4">
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-barcode me-2"></i>Mã chi tiết nhập:
                        </span>
                        <span class="info-value fw-bold text-primary">#@Model.MaChiTietNk</span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-file-import me-2"></i>Mã phiếu nhập:
                        </span>
                        <span class="info-value">#@Model.MaPhieuNhap</span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-box me-2"></i>Tên sản phẩm:
                        </span>
                        <span class="info-value fw-semibold">@Model.TenSp</span>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <!-- Quantity and Price Details -->
                <div class="info-group mb-4">
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-sort-numeric-up me-2"></i>Số lượng:
                        </span>
                        <span class="info-value">
                            <span class="badge bg-info fs-6">@Model.SoLuong</span>
                        </span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-dollar-sign me-2"></i>Đơn giá nhập:
                        </span>
                        <span class="info-value fw-bold text-success">@Model.DonGiaNhap.ToString("N0") VNĐ</span>
                    </div>
                    
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-calendar-alt me-2"></i>Ngày nhập:
                        </span>
                        <span class="info-value">@Model.NgayNhap.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Total Calculation -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-light border">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">
                            <i class="fas fa-calculator me-2"></i>Tổng giá trị:
                        </span>
                        <span class="fw-bold text-success fs-5">
                            @((Model.SoLuong * Model.DonGiaNhap).ToString("N0")) VNĐ
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
            <a asp-action="DanhSachChiTietPhieuNhap" asp-route-maPhieuNhap="@Model.MaPhieuNhap" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
            </a>
            
            <div>
                <a asp-action="SuaChiTietPhieuNhap" asp-route-id="@Model.MaChiTietNk" class="btn btn-warning me-2">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa
                </a>
                <a asp-action="XoaChiTietPhieuNhap" asp-route-id="@Model.MaChiTietNk" class="btn btn-outline-danger">
                    <i class="fas fa-trash me-2"></i>Xóa
                </a>
            </div>
        </div>
    </div>
</div>
