@model X.PagedList.IPagedList<WebBanHang215.Models.NhapKho>
@using X.PagedList
@using X.PagedList.Mvc.Core
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhSachPhieuNhap";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
    int stt = (Model.PageNumber - 1) * Model.PageSize + 1;
}

<div class="text-center my-4">
    <h1 class="btn btn-primary shadow px-4 py-2 rounded text-white fs-2">
        Danh sách phiếu nhập
    </h1>
</div>

<p>
    <a asp-action="ThemPhieuNhap" class="btn btn-success">Thêm phiếu nhập mới</a>
</p>

<table class="table text-center">
    <thead class="table-success">
        <tr>
            <th>STT</th>
            <th>@Html.DisplayNameFor(model => model[0].MaPhieuNhap)</th>
            <th>@Html.DisplayNameFor(model => model[0].NgayNhap)</th>
            <th>@Html.DisplayNameFor(model => model[0].GhiChu)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @{
            int mau = 0;
            string mauSD = "table-success";
        }
        @foreach (var item in Model)
        {
            switch (mau % 4)
            {
                case 0: mauSD = "table-primary"; break;
                case 1: mauSD = "table-warning"; break;
                case 2: mauSD = "table-success"; break;
                case 3: mauSD = "table-danger"; break;
            }
            mau++;
            <tr class="@mauSD">
                <td>@stt</td>
                <td>@item.MaPhieuNhap</td>
                <td>@item.NgayNhap.ToString("dd/MM/yyyy")</td>
                <td>@item.GhiChu</td>
                <td>
                    <a asp-action="DanhSachChiTietPhieuNhap"
                       asp-route-maPhieuNhap="@item.MaPhieuNhap"
                       class="btn btn-sm btn-outline-primary">Chi tiết</a>

                    <a asp-action="SuaPhieuNhap"
                       asp-route-id="@item.MaPhieuNhap"
                       class="btn btn-sm btn-outline-warning">Sửa</a>

                    <form asp-action="XoaPhieuNhap"
                          asp-controller="DonHang"
                          asp-area="admin"
                          method="post"
                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa phiếu nhập này không?');"
                          style="display:inline">
                        <input type="hidden" name="id" value="@item.MaPhieuNhap" />
                        <button type="submit" class="btn btn-sm btn-link text-danger p-0">Xóa</button>
                    </form>

                    <a asp-action="ThemChiTietPhieuNhap"
                       asp-route-maPhieuNhap="@item.MaPhieuNhap"
                       class="btn btn-sm btn-outline-success">➕ Thêm chi tiết</a>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>

<div class="product__pagination text-center mt-4">
    @Html.PagedListPager(Model, page => Url.Action("DanhSachPhieuNhap", new { page }),
            new PagedListRenderOptions
    {
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always,
        UlElementClasses = new[] { "pagination" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    })
</div>
