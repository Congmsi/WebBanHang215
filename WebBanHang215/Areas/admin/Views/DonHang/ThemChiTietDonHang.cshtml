@model WebBanHang215.Areas.admin.ViewModels.ChiTietDonHangViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm chi tiết đơn hàng";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center text-primary my-4">Thêm chi tiết đơn hàng</h2>

<<form asp-action="ThemChiTietDonHang" method="post" class="container">
    <input type="hidden" asp-for="MaDh" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="MaSp" class="form-label"></label>
        <select asp-for="MaSp" asp-items="Model.SanPhamList" class="form-select">
            <option value="">-- Chọn sản phẩm --</option>
        </select>
        <span asp-validation-for="MaSp" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SoLuong" class="form-label"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Thêm chi tiết</button>
    <a asp-action="XemChiTietDonHang" asp-route-id="@Model.MaDh" class="btn btn-secondary ms-2">Quay lại</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
