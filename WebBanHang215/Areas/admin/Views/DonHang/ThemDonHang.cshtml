@model WebBanHang215.Areas.admin.ViewModels.DonHangCreateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm đơn hàng";
    Layout = "~/Areas/admin/Views/_LayoutCustomAdmin.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Tạo đơn hàng mới</h1>
    <p class="page-subtitle">Thêm đơn hàng mới vào hệ thống</p>
</div>

<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="mb-0">
            <i class="fas fa-plus-circle me-2"></i>Thông tin đơn hàng
        </h5>
    </div>
    <div class="admin-card-body">
        <form asp-action="ThemDonHang" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <!-- Customer Information -->
                <div class="col-md-6">
                    <h6 class="fw-semibold mb-3 text-primary">
                        <i class="fas fa-user me-2"></i>Thông tin khách hàng
                    </h6>
                    
                    <div class="mb-3">
                        <label asp-for="MaNd" class="form-label fw-semibold">Khách hàng *</label>
                        <select asp-for="MaNd" asp-items="Model.NguoiDungList" class="form-select">
                            <option value="">-- Chọn khách hàng --</option>
                        </select>
                        <span asp-validation-for="MaNd" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiaChiGiaoHang" class="form-label fw-semibold">Địa chỉ giao hàng *</label>
                        <textarea asp-for="DiaChiGiaoHang" class="form-control" rows="3" 
                                  placeholder="Nhập địa chỉ giao hàng đầy đủ"></textarea>
                        <span asp-validation-for="DiaChiGiaoHang" class="text-danger"></span>
                    </div>
                </div>

                <!-- Order Information -->
                <div class="col-md-6">
                    <h6 class="fw-semibold mb-3 text-success">
                        <i class="fas fa-shopping-cart me-2"></i>Thông tin đơn hàng
                    </h6>
                    
                    <div class="mb-3">
                        <label asp-for="TongTien" class="form-label fw-semibold">Tổng tiền *</label>
                        <div class="input-group">
                            <input asp-for="TongTien" class="form-control" placeholder="0" />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <span asp-validation-for="TongTien" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TrangThai" class="form-label fw-semibold">Trạng thái đơn hàng *</label>
                        <select asp-for="TrangThai" class="form-select">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="Chờ xử lý">Chờ xử lý</option>
                            <option value="Đang xử lý">Đang xử lý</option>
                            <option value="Đang giao">Đang giao</option>
                            <option value="Đã giao">Đã giao</option>
                            <option value="Đã hủy">Đã hủy</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaKm" class="form-label fw-semibold">Khuyến mãi</label>
                        <select asp-for="MaKm" asp-items="Model.KhuyenMaiList" class="form-select">
                            <option value="">-- Không áp dụng --</option>
                        </select>
                        <span asp-validation-for="MaKm" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div class="row">
                <!-- Payment Information -->
                <div class="col-md-6">
                    <h6 class="fw-semibold mb-3 text-warning">
                        <i class="fas fa-credit-card me-2"></i>Thông tin thanh toán
                    </h6>
                    
                    <div class="mb-3">
                        <label asp-for="HinhThucThanhToan" class="form-label fw-semibold">Hình thức thanh toán *</label>
                        <select asp-for="HinhThucThanhToan" class="form-select">
                            <option value="">-- Chọn hình thức --</option>
                            <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                            <option value="VNPay">VNPay</option>
                            <option value="Momo">Momo</option>
                            <option value="Chuyển khoản">Chuyển khoản ngân hàng</option>
                        </select>
                        <span asp-validation-for="HinhThucThanhToan" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TrangThaiThanhToan" class="form-label fw-semibold">Trạng thái thanh toán *</label>
                        <select asp-for="TrangThaiThanhToan" class="form-select">
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="Chưa thanh toán">Chưa thanh toán</option>
                            <option value="Đã thanh toán">Đã thanh toán</option>
                            <option value="Thất bại">Thất bại</option>
                        </select>
                        <span asp-validation-for="TrangThaiThanhToan" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaGiaoDich" class="form-label fw-semibold">Mã giao dịch</label>
                        <input asp-for="MaGiaoDich" class="form-control" 
                               placeholder="Mã giao dịch từ cổng thanh toán" />
                        <span asp-validation-for="MaGiaoDich" class="text-danger"></span>
                    </div>
                </div>

                <!-- Delivery Information -->
                <div class="col-md-6">
                    <h6 class="fw-semibold mb-3 text-info">
                        <i class="fas fa-truck me-2"></i>Thông tin giao hàng
                    </h6>
                    
                    <div class="mb-3">
                        <label asp-for="NgayGiaoDuKien" class="form-label fw-semibold">Ngày giao dự kiến</label>
                        <input asp-for="NgayGiaoDuKien" type="date" class="form-control" />
                        <span asp-validation-for="NgayGiaoDuKien" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NgayGiaoThucTe" class="form-label fw-semibold">Ngày giao thực tế</label>
                        <input asp-for="NgayGiaoThucTe" type="date" class="form-control" />
                        <span asp-validation-for="NgayGiaoThucTe" class="text-danger"></span>
                        <div class="form-text">Chỉ điền khi đơn hàng đã được giao thành công</div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
                <button type="submit" class="btn btn-success ms-2">
                    <i class="fas fa-save me-2"></i>Lưu đơn hàng
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
