@model WebBanHang215.ViewModels.SanPhamAnhViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Thêm ảnh cho sản phẩm</h2>

<form asp-action="ThemAnhSanPham" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaSp" />

    <div class="form-group">
        <label for="AnhMoi">Chọn ảnh:</label>
        <input asp-for="AnhMoi" type="file" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Tải lên</button>
    <a asp-action="DanhMucSanPham" class="btn btn-secondary">Quay lại</a>
</form>
