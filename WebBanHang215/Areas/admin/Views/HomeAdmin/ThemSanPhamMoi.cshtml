@model WebBanHang215.ViewModels.SanPhamCreateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Areas/admin/Views/_LayoutCustomAdmin.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Thêm sản phẩm mới</h1>
    <p class="page-subtitle">Tạo sản phẩm mới trong hệ thống</p>
</div>

<div class="row">
    <div class="col-12">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0">Thông tin sản phẩm</h5>
            </div>
            <div class="admin-card-body">
                <form asp-action="ThemSanPhamMoi" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TenSp" class="form-label">Tên sản phẩm</label>
                            <input asp-for="TenSp" class="form-control" placeholder="Nhập tên sản phẩm" />
                            <span asp-validation-for="TenSp" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Gia" class="form-label">Giá bán</label>
                            <input asp-for="Gia" class="form-control" placeholder="Nhập giá bán" />
                            <span asp-validation-for="Gia" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="GiaNhap" class="form-label">Giá nhập</label>
                            <input asp-for="GiaNhap" class="form-control" placeholder="Nhập giá nhập" />
                            <span asp-validation-for="GiaNhap" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="GiaKhuyenMai" class="form-label">Giá khuyến mãi</label>
                            <input asp-for="GiaKhuyenMai" class="form-control" placeholder="Nhập giá khuyến mãi" />
                            <span asp-validation-for="GiaKhuyenMai" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SoLuongNhap" class="form-label">Số lượng nhập</label>
                            <input asp-for="SoLuongNhap" class="form-control" placeholder="Nhập số lượng" />
                            <span asp-validation-for="SoLuongNhap" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MaLoai" class="form-label">Loại sản phẩm</label>
                            <select asp-for="MaLoai" asp-items="ViewBag.MaLoai" class="form-select">
                                <option value="">Chọn loại sản phẩm</option>
                            </select>
                            <span asp-validation-for="MaLoai" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaHang" class="form-label">Hãng sản xuất</label>
                            <select asp-for="MaHang" asp-items="ViewBag.MaHang" class="form-select">
                                <option value="">Chọn hãng sản xuất</option>
                            </select>
                            <span asp-validation-for="MaHang" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MaNcc" class="form-label">Nhà cung cấp</label>
                            <select asp-for="MaNcc" asp-items="ViewBag.MaNcc" class="form-select">
                                <option value="">Chọn nhà cung cấp</option>
                            </select>
                            <span asp-validation-for="MaNcc" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaTrangThai" class="form-label">Trạng thái</label>
                            <select asp-for="MaTrangThai" asp-items="ViewBag.MaTrangThai" class="form-select">
                                <option value="">Chọn trạng thái</option>
                            </select>
                            <span asp-validation-for="MaTrangThai" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MaGioiTinh" class="form-label">Giới tính</label>
                            <select asp-for="MaGioiTinh" asp-items="ViewBag.MaGioiTinh" class="form-select">
                                <option value="">Chọn giới tính</option>
                            </select>
                            <span asp-validation-for="MaGioiTinh" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="DanhMucSanPham" class="btn btn-secondary me-3">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Lưu sản phẩm
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
